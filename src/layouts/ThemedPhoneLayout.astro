---
import { generatePalette } from '../utils/generatePalette';

// ═══════════════════════════════════════════════════════════════════════════════
// BRAND CONFIGURATION
// Edit these values to customize the theme
// ═══════════════════════════════════════════════════════════════════════════════

const brandColor = "#5E5CE6";
const headingFont: "source-serif" | "inter" | "geist" = "inter";

// ═══════════════════════════════════════════════════════════════════════════════
// PALETTE GENERATION (don't edit below unless you know what you're doing)
// ═══════════════════════════════════════════════════════════════════════════════

// Base palette - neutrals for dark theme UI
const basePalette = generatePalette("base", [
  "#F8F8FA",                           // A1: near white (text-primary)
  0.12, 0.24, 0.36, 0.50, 0.65, 0.80,  // stops 2-7 (slow ramp)
  "#8E8E93",                           // A8: text-secondary
  0.40, 0.75,                          // stops 9-10 (faster)
  "#636366",                           // A11: text-muted
  0.25, 0.45, 0.65,                    // stops 12-14 (slowing)
  "#161618",                           // A15: surface dark
  0.60,                                // stop 16 (toward black)
]);

// Brand palette - accent color for key elements
const brandPalette = generatePalette("brand", [
  "#EEEEFF",                           // A1: lightest tint
  0.12, 0.24, 0.36, 0.50, 0.65, 0.80,  // stops 2-7 (slow ramp)
  "#8B89F0",                           // A8: entering vibrant zone
  0.40, 0.75,                          // stops 9-10 (faster)
  brandColor,                          // A11: peak saturation
  0.25, 0.45, 0.65,                    // stops 12-14 (slowing)
  "#2D2B70",                           // A15: dark anchor
  0.60,                                // stop 16 (toward black)
]);

// Font configuration
const headingFontFamily = {
  "source-serif": "'Source Serif 4', serif",
  "inter": "'Inter', sans-serif",
  "geist": "'Geist', sans-serif",
}[headingFont];

// Combine all CSS variables
const cssVars = {
  ...basePalette,
  ...brandPalette,
  "white": "#ffffff",
  "black": "#000000",
  "transparent": "transparent",
  "font-heading": headingFontFamily,
};

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <!-- Font preconnects -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Inter (body font) -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Source Serif 4 (heading option) -->
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Geist (heading option) -->
  <link href="https://cdn.jsdelivr.net/npm/geist@1.2.0/dist/fonts/geist-sans/style.min.css" rel="stylesheet">

  <style is:global define:vars={cssVars}>
    :root {
      /* Radii */
      --radius-sm: 8px;
      --radius-md: 14px;
      --radius-lg: 22px;
      --radius-xl: 32px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #111;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
      -webkit-font-smoothing: antialiased;
    }

    h1, h2, h3, h4, h5, h6 {
      font-family: var(--font-heading);
    }
  </style>
  <style>
    .iphone-frame {
      width: 390px;
      height: 844px;
      background: #000;
      border-radius: 55px;
      padding: 11px;
      position: relative;
      box-shadow:
        inset 0 0 0 1px rgba(255,255,255,0.1),
        0 50px 100px rgba(0, 0, 0, 0.5);
    }

    .iphone-frame::before {
      content: '';
      position: absolute;
      right: -2px;
      top: 180px;
      width: 3px;
      height: 80px;
      background: #333;
      border-radius: 0 2px 2px 0;
    }

    .iphone-screen {
      width: 100%;
      height: 100%;
      background: var(--black);
      border-radius: 45px;
      overflow: hidden;
      position: relative;
    }

    .dynamic-island {
      position: absolute;
      top: 11px;
      left: 50%;
      transform: translateX(-50%);
      width: 126px;
      height: 36px;
      background: #000;
      border-radius: 20px;
      z-index: 100;
    }
  </style>
</head>
<body>
  <div class="iphone-frame">
    <div class="iphone-screen">
      <div class="dynamic-island"></div>
      <slot />
    </div>
  </div>
</body>
</html>
