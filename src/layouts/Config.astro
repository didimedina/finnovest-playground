---
import { generatePalette } from '../utils/generatePalette';
import { accentAnchors, baseAnchors, type AccentColor, type BaseColor, type Contrast } from '../utils/colors';

// ═══════════════════════════════════════════════════════════════════════════════
// PROPS
// ═══════════════════════════════════════════════════════════════════════════════

type Props = {
  title: string;
  accentColor?: AccentColor;
  baseColor?: BaseColor;
  contrast?: "hard" | "soft";
  headingFont?: "serif" | "sans" | "mono";
  radius?: "none" | "sm" | "md" | "lg";
}

const {
  title,
  accentColor = "teal",
  contrast = "hard",
  baseColor = "slate",
  headingFont = "sans",
  radius = "md",
} = Astro.props;

// ═══════════════════════════════════════════════════════════════════════════════
// ANCHOR SELECTION
// ═══════════════════════════════════════════════════════════════════════════════

const accent = accentAnchors[accentColor][contrast];
const base = baseAnchors[baseColor][contrast];

// ═══════════════════════════════════════════════════════════════════════════════
// PALETTE GENERATION (Radix 12-step semantics)
// ═══════════════════════════════════════════════════════════════════════════════

// Universal blend curve derived from Radix orange/violet averages
const accentPalette = generatePalette("accent", [
  accent.light,                    // 1: app bg
  0.03, 0.09, 0.19, 0.28, 0.37,   // 2-6: subtle bg → borders
  0.52, 0.70,                      // 7-8: border → focus ring
  accent.mid,                      // 9: solid bg (peak chroma)
  0.12, 0.23,                      // 10-11: solid hover → text
  accent.dark,                     // 12: high-contrast text
]);

const basePalette = generatePalette("base", [
  base.light,                   // 1: app bg
  0.03, 0.09, 0.19, 0.28, 0.37,   // 2-6: subtle bg → borders
  0.52, 0.70,                      // 7-8: border → focus ring
  base.mid,                     // 9: solid bg (peak chroma)
  0.12, 0.23,                      // 10-11: solid hover → text
  base.dark,                    // 12: high-contrast text
]);

// ═══════════════════════════════════════════════════════════════════════════════
// FONT CONFIGURATION
// ═══════════════════════════════════════════════════════════════════════════════

const headingFontFamily = {
  serif: "'Source Serif 4', serif",
  sans: "'Inter', sans-serif",
  mono: "'Geist Mono', monospace",
}[headingFont];

// ═══════════════════════════════════════════════════════════════════════════════
// RADIUS CONFIGURATION
// ═══════════════════════════════════════════════════════════════════════════════

const radiusScale = {
  none: { sm: "0px", md: "0px", lg: "0px", xl: "0px" },
  sm:   { sm: "4px", md: "6px", lg: "8px", xl: "12px" },
  md:   { sm: "8px", md: "14px", lg: "22px", xl: "32px" },
  lg:   { sm: "12px", md: "20px", lg: "32px", xl: "48px" },
}[radius];

// ═══════════════════════════════════════════════════════════════════════════════
// CSS VARIABLES
// ═══════════════════════════════════════════════════════════════════════════════

const cssVars = {
  ...accentPalette,
  ...basePalette,
  "white": "#ffffff",
  "black": "#000000",
  "transparent": "transparent",
  "font-heading": headingFontFamily,
  "radius-sm": radiusScale.sm,
  "radius-md": radiusScale.md,
  "radius-lg": radiusScale.lg,
  "radius-xl": radiusScale.xl,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <!-- Font preconnects -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Inter (body font) -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Source Serif 4 (heading option) -->
  <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Geist Mono (heading option) -->
  <link href="https://cdn.jsdelivr.net/npm/geist@1.2.0/dist/fonts/geist-mono/style.min.css" rel="stylesheet">

  <style is:global define:vars={cssVars}>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--neutral-12);
      color: var(--neutral-1);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
      -webkit-font-smoothing: antialiased;
    }

    h1, h2, h3, h4, h5, h6 {
      font-family: var(--font-heading);
    }
  </style>
  <style>
    .iphone-frame {
      width: 390px;
      height: 844px;
      background: #000;
      border-radius: 55px;
      padding: 11px;
      position: relative;
      box-shadow:
        inset 0 0 0 1px rgba(255,255,255,0.1),
        0 50px 100px rgba(0, 0, 0, 0.5);
    }

    .iphone-frame::before {
      content: '';
      position: absolute;
      right: -2px;
      top: 180px;
      width: 3px;
      height: 80px;
      background: #333;
      border-radius: 0 2px 2px 0;
    }

    .iphone-screen {
      width: 100%;
      height: 100%;
      background: var(--black);
      border-radius: 45px;
      overflow: hidden;
      position: relative;
    }

    .dynamic-island {
      position: absolute;
      top: 11px;
      left: 50%;
      transform: translateX(-50%);
      width: 126px;
      height: 36px;
      background: #000;
      border-radius: 20px;
      z-index: 100;
    }
  </style>
</head>
<body>
  <div class="iphone-frame">
    <div class="iphone-screen">
      <div class="dynamic-island"></div>
      <slot />
    </div>
  </div>
</body>
</html>
